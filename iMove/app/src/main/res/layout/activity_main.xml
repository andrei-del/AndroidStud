<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202020"
    tools:context="com.example.iMove.MainActivity">


    <ImageView
        android:id="@+id/imgpage"
        android:layout_width="412dp"
        android:layout_height="381dp"
        android:src="@drawable/unnamed"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/titlepage"
        android:layout_width="347dp"
        android:layout_height="149dp"
        android:fontFamily="@font/bungee_inline"
        android:gravity="center"
        android:lineSpacingExtra="12dp"
        android:text="Consistency\n Is the key to success"
        android:textAlignment="center"
        android:textColor="#F9F6FA"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgpage"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/subtitlepage"
        android:layout_width="337dp"
        android:layout_height="127dp"
        android:fontFamily="@font/lemon"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="Challenge Yourself\n Everyday"
        android:textAlignment="center"
        android:textColor="#F4F3F3"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="520dp" />

    <View
        android:id="@+id/bgprogress"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:background="@drawable/rounded"

        />

    <View
        android:id="@+id/bgprogresstop"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:background="@drawable/rounded_edittext" />



    <TextView
        android:id="@+id/btnexercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="DISCOVER THE BEST WORKOUTS"
        android:textAlignment="center"
        android:textColor="#FBF8F8"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        tools:layout_editor_absoluteY="585dp" />

</androidx.constraintlayout.widget.ConstraintLayout>