<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404042"
    android:id="@+id/rView"
    tools:context="com.example.iMove.MainActivity">

    <LinearLayout
        android:id="@+id/fitone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"



        >


        <ImageView
            android:src="@drawable/chesthome"
            android:layout_width="130dp"
            android:layout_height="70dp"
            />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fitonetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anton"
                android:text="Chest day"
                android:textColor="#FF5722"
                android:textSize="22sp"
                android:layout_marginLeft="1dp"
                />


        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/intropage"
        android:layout_width="219dp"
        android:layout_height="61dp"
        android:layout_marginStart="165dp"
        android:fontFamily="@font/actor"
        android:text="-Wide press-up(4x10)\n-Diamond press-up(4x10)\n-Incline press-up(4x10)"
        android:textColor="#EDE6E6"
        android:textSize="17sp"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/fitone" />

    <TextView
        android:id="@+id/subintropage"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:fontFamily="@font/anton"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="Don't Forget to Breathe :)"
        android:textColor="#FF5722"
        android:textSize="17sp"
        android:layout_marginLeft="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intropage"
        tools:layout_editor_absoluteY="63dp" />


    <View
        android:id="@+id/divpage"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="26dp"
        android:background="#404042"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subintropage"/>

    <TextView
        android:id="@+id/timerValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="144dp"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="68sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divpage"
        />
    <ImageView
        android:id="@+id/imgtimer"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/stopwatch"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divpage"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relax"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/divpage"/>

    <View
        android:id="@+id/bgprogress"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"

        app:layout_constraintTop_toTopOf="@+id/btnexercise" />


    <TextView
        android:id="@+id/btnexercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="FIND YOUR BMI"
        android:textAlignment="center"
        android:textColor="#FBF8F8"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        tools:layout_editor_absoluteY="585dp" />

</androidx.constraintlayout.widget.ConstraintLayout>